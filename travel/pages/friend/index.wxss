page,.wrap{
  width: 100%;
  height: 100%;
}
.wrap{
  display: flex;
  flex-direction: column;
}
.top{
  width: 95%;
  height: 350rpx;
 margin: 0 auto;
}
.top image{
  width: 100%;
  height: 100%;
}
.goWith{
  font-size: 50rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.center{
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  flex-wrap: wrap;
  margin-top: 120rpx;
}
.box{
  width: 48%;
}
.box_friend{
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
}
.box view{
  font-size: 30rpx;
}
.head{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.like{
  margin:20rpx 0rpx;
  display: flex;
  justify-content: space-between;
}
.distance{
  display: flex;
  justify-content: space-between;
}
.distance image{
  width: 50rpx;
  height: 40rpx;
}
.distance view{
  display: flex;
}
.distance view image{
  margin-right: 5rpx;
}