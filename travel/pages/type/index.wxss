page,.wrap{
  width: 100%;
  height: 100%;
}
.wrap{
  display: flex;
  flex-direction:column;
  background: #F5F5F5;
}
.top{
  width: 100%;
  height: 400rpx;
}
.top image{
  width: 100%;
  height: 100%;
}
.title{
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 1px #eee solid;
  background: #fff;
  text-align: center;
}
.content{
  width: 100%;
  background: #fff;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.box{
  width: 45%;
  margin-top: 20rpx;
  font-size: 30rpx;
}
.box image{
  width: 100%;
  height: 250rpx;
}