page, .wrap {
  width: 100%;
  height: 100%;
}

.wrap {
  display: flex;
  flex-direction: column;
}

.go, .arrive {
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 30rpx;
  justify-content: space-around;
}

.box input {
  width: 70%;
  height: 70rpx;
  line-height: 70rpx;
  border: 1rpx #ccc solid;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}
.city{
  width: 88%;
  height: 700rpx;
  border:1px #ccc solid;
  position: relative;
  top:-138rpx;
  left: 10%;
  background: #fff;
  z-index: 99;
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.city view{
  width: 120rpx;
  height: 80rpx;
  margin: 0 20rpx;
}
.none{
  display: none;
}
.x{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  text-align: center;
  left: 95%;
  top:-20rpx;
}
.arriveCity{
  width: 88%;
  height: 700rpx;
  border:1px #ccc solid;
  position: relative;
  top:0rpx;
  left: 10%;
  background: #fff;
  z-index: 99;
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.arriveCity view{
  width: 120rpx;
  height: 80rpx;
  margin: 0 20rpx;
}